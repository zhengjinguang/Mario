<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/mario_307dp"
              android:layout_height="@dimen/mario_190dp"
              android:layout_gravity="center"
              android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange"
        android:text="是否确认绑定SD卡"
        android:textSize="@dimen/mario_24sp"
        android:layout_marginTop="@dimen/mario_31dp"/>

    <TextView
        android:id="@+id/alert_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange"
        android:text="预计6-8分钟"
        android:maxLines="2"
        android:textSize="@dimen/mario_16sp"
        android:layout_marginTop="@dimen/mario_13dp"/>

    <LinearLayout
        android:id="@+id/alert_dialog_buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mario_40dp"
        android:layout_marginBottom="@dimen/mario_10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alert_dialog_positiveButton"
            android:layout_width="@dimen/mario_84dp"
            android:layout_height="@dimen/mario_29dp"
            android:textColor="@color/white"
            android:textSize="@dimen/mario_16sp"
            android:layout_gravity="center_vertical"
            android:text="确定"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/dialog_button_focus_selector"
            />

        <Button
            android:id="@+id/alert_dialog_negativeButton"
            android:layout_width="@dimen/mario_84dp"
            android:layout_height="@dimen/mario_29dp"
            android:textColor="@color/white"
            android:textSize="@dimen/mario_16sp"
            android:layout_gravity="center_vertical"
            android:text="取消"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/dialog_button_focus_selector"
            android:layout_marginLeft="32dp"/>

    </LinearLayout>

</LinearLayout>