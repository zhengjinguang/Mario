<?xml version="1.0" encoding="utf-8"?>
<com.lemi.mario.widget.helper.view.BottomTipsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mario_424dp"
    android:layout_height="@dimen/mario_76dp"
    android:background="@drawable/error_tips_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tips_image"
            android:layout_width="@dimen/mario_35dp"
            android:layout_height="@dimen/mario_23dp"
            android:src="@drawable/mount_check_error"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/mario_22sp"
            android:textColor="@color/white"
            />

    </LinearLayout>


</com.lemi.mario.widget.helper.view.BottomTipsView>