<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/add_large_item"
            android:text="add large item"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/add_normal_item"
            android:text="add normal item"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/add_little_item"
            android:text="add little item"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/pre"
            android:text="pre"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/next"
            android:text="next"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/remove_all"
            android:text="remove all"
            android:textSize="20sp"
            android:layout_margin="10dp" />

    </LinearLayout>


    <com.lemi.mario.sample.view.CardItemContainer
        android:id="@+id/card_item_container"
        style="@style/CardItemContainer"
        android:layout_marginTop="30dp">

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/large_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/large_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />

        <com.lemi.mario.sample.view.ScaleImageButton style="@style/little_recomend_button" />


    </com.lemi.mario.sample.view.CardItemContainer>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText" />

</LinearLayout>