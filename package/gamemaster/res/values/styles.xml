    <style name="account_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/mario_82dp</item>
        <item name="android:layout_marginLeft">@dimen/mario_50dp</item>
        <item name="android:textSize">@dimen/mario_35sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="account_text">
        <item name="android:layout_width">@dimen/mario_392dp</item>
        <item name="android:layout_height">@dimen/mario_82dp</item>
        <item name="android:layout_marginLeft">@dimen/mario_10dp</item>
        <item name="android:paddingLeft">@dimen/mario_20dp</item>
        <item name="android:paddingRight">@dimen/mario_20dp</item>
        <item name="android:layout_toRightOf">@id/account_nick_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mario_30sp</item>
        <item name="android:background">@drawable/account_text_selector</item>
        <item name="android:nextFocusLeft">@id/account_change_gender</item>
    </style>
    <style name="lottery_user">
        <item name="android:layout_width">wrap_content</item>
